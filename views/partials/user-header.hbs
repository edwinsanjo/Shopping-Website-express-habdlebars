<style>
.dropdown:hover .dropdown-menu {
  display: block;
}
</style>
<nav class="bg-gray-100">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex justify-between">

      <div class="flex space-x-4">
        <!-- logo -->
        <div>
          <a href="/" class="flex items-center py-5 px-2 text-gray-700 hover:text-gray-900">
            <svg class="h-6 w-6 mr-1 text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
            </svg>
            <span class="font-bold">SHOPit</span>
          </a>
        </div>

        <!-- primary nav -->
        <div class="hidden md:flex items-center mr-2 space-x-1">
          <a href="/" class="py-5 px-3 text-gray-700 hover:text-gray-900">Home</a>
          <a href="/cart" class="py-5 px-3 text-gray-700 hover:text-gray-900">Cart</a>
          {{#if user}}
          <a href="/orders" class="py-5 px-3 text-gray-700 hover:text-gray-900">Orders</a>
          {{/if}}
        </div>
      </div>

      <!-- secondary nav -->
      <div class="hidden md:flex items-center space-x-1">
        {{#if user}}
            <div class="dropdown inline-block relative bg-grey-400">
                <button class=" text-white py-2 px-4 rounded inline-flex items-center">
                    <span class="mr-1">{{user.Name}}</span>
                <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/> </svg>
                    </button>
                <ul class="dropdown-menu absolute hidden pt-1">
                    <li class=""><a class="rounded-t py-2 px-4 block whitespace-no-wrap" href="#">One</a></li>
                    <li class=""><a class="rounded-b py-2 px-4 block whitespace-no-wrap" href="/logout">LogOut</a></li>
                </ul>
            </div>
        {{else}}
          <a href="/login" class="py-5 hover:text-green-300 px-3">Login</a>
          <a href="/signup" class="py-2 px-3 bg-green-500 hover:bg-green-300 text-white hover:text-white rounded transition duration-300">Signup</a>
        {{/if}}
        </div>

      <!-- mobile button goes here -->
      <div class="md:hidden flex items-center">
        <button class="mobile-menu-button">
          <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

    </div>
  </div>

  <!-- mobile menu -->
  <div class="mobile-menu hidden md:hidden h-40 ml-6">
    <a href="#" class="block py-2 px-4 text-sm hover:bg-gray-200">Features</a>
    <a href="#" class="block py-2 px-4 text-sm hover:bg-gray-200">Pricing</a>
    <div class="mt-2 ml-3">
      <a href="" class="py-2 text-white px-3 bg-blue-800 hover:bg-blue-600 rounded transition duration-300">Login</a>
      <a href="" class="py-2 text-white px-3 bg-blue-800 hover:bg-blue-600 rounded transition duration-300">Signup</a>
    </div>
  </div>
  <script>
    const btn = document.querySelector("button.mobile-menu-button");
    const menu = document.querySelector(".mobile-menu");

    btn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  </script>
  </nav>