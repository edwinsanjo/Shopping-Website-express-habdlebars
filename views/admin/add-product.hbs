<section>
    <div class="container mt-4">
        <div class="row">

            <div class="col-md-6">
                <h2 class="text-center">Add Products</h2>

                <form action="/admin/add-product/" enctype="multipart/form-data" method="POST">
                    <label for="name">Name</label>
                    <input name="Name" id="name" type="text" class="form-control" required>

                    <label for="category">Category</label>
                    <input name="Category" id="category" type="text" class="form-control" required>

                    <label for="price">Price</label>
                    <input name="Price" id="price" type="text" class="form-control" required>

                    <label for="description">Description</label>
                    <input name="Description" id="description" type="text" class="form-control" required>

                    <label>Image</label>
                    <input name="Image" type="file" class="form-control" required>

                    <button class="btn btn-success mt-4" type="submit">Submit</button>
                </form>

            </div>

        </div>
    </div>
</section>