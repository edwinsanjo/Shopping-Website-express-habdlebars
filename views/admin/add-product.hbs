<div class="min-h-screen bg-gray-100 flex flex-col py-12 px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Add Products</h2>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-6 shadow rounded-lg sm:px-10">
      <form class="mb-0 space-y-6" action="/admin/add-product/" enctype="multipart/form-data" method="POST">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
          <div class="mt-1">
            <input id="name" name="Name" type="text" required class="rounded-none" />
          </div>
        </div>

        <div>
          <label for="company-size" class="block text-sm font-medium text-gray-700">Category</label>
          <div class="mt-1">
            <select name="Category" id="company-size" class="rounded-none">
              <option value="others">please select</option>
              <option value="laptop">Laptop</option>
              <option value="mobile">Mobile</option>
              <option value="earphones">earphones</option>
              <option value="mobile">mobile</option>
              <option value="laptop">Laptop</option>
              <option value="mobile">Mobile</option>
              <option value="laptop">Laptop</option>
              <option value="mobile">Mobile</option>
              <option value="pthers">Others</option>
            </select>
          </div>
        </div>

        <div>
          <label for="price" class="block text-sm font-medium text-gray-700">Price</label>
          <div class="mt-1">
            <input id="price" name="Price" type="number" min="10" max="1000000" autocomplete="current-password"
              required class="rounded-none" />
          </div>
        </div>

        <div>
          <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
          <div class="mt-1">
            <input id="description" name="Description" type="text" required class="rounded-none" />
          </div>
        </div>

        <div>
          <label for="image" class="block text-sm font-medium text-gray-700">Image</label>
          <div class="mt-1">
            <input id="image" name="Image" type="file" required class="rounded-none" />
          </div>
        </div>

        <div>
          <button type="submit"
            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>