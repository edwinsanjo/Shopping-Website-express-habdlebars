    <div style="font-family: 'Poppins', sans-serif;" class="min-h-screen flex items-center justify-center bg-white">

        <!-- login form -->
        <div class="bg-gray-100 p-16 rounded shadow-2xl lg:w-2/4 w-full">
      
          <h2 class="text-3xl font-bold mb-10 text-gray-800">Add Products</h2>
      
          <form class="space-y-5" action="/admin/add-product/" enctype="multipart/form-data" method="POST">

            <div>
              <label class="block mb-1 font-bold text-gray-500">Name</label>
              <input value="{{product.Name}}" type="text" name="Name" class="w-full border-2 border-gray-200 p-3 rounded outline-none focus:border-purple-500">
            </div>
      
            <div>
              <label class="block mb-1 font-bold text-gray-500">Category</label>
              <input value="{{product.Category}}" type="text" name="Category" class="w-full border-2 border-gray-200 p-3 rounded outline-none focus:border-purple-500">
            </div>

            <div>
                <label class="block mb-1 font-bold text-gray-500">Price</label>
                <input value="{{product.Price}}" type="number" name="Price" min="10" max="10000000" class="w-full border-2 border-gray-200 p-3 rounded outline-none focus:border-purple-500">
            </div>

            <div>
                <label class="block mb-1 font-bold text-gray-500">Description</label>
                <input value="{{product.Description}}" type="text" name="Description" class="w-full border-2 border-gray-200 p-3 rounded outline-none focus:border-purple-500">
            </div>

            <div>
                <label class="block mb-1 font-bold text-gray-500">Image</label>
                <img src="/images/product-images/{{product._id}}.png" style="height: 100px; width 100px;" class="mb-3" id="imgView" alt="">
                <input type="file" name="Image" class="w-full border-2 border-gray-200 p-3 rounded outline-none focus:border-purple-500">
            </div>
      
            <button class="block w-full bg-blue-400 hover:bg-blue-300 p-4 rounded text-white hover:text-white transition duration-300">Submit</button>
      
          </form>
      
        </div>
      
      </div>

      <script>
        function viewImage(event){
            document.getElementById("imgView").src=URL.createObjectURL(event.target.files[0])
        }
    </script>