<section>
    <div class="container mt-4">
        <div class="row">

            <div class="col-md-6">
                <h2 class="text-center mb-3">Edit Products</h2>

                <form action="/admin/edit-product/{{product._id}}" enctype="multipart/form-data" method="POST">
                    <label for="name">Name</label>
                    <input name="Name" id="name" type="text" class="form-control" value="{{product.Name}}">

                    <label for="category">Category</label>
                    <input name="Category" id="category" type="text" class="form-control" value="{{product.Category}}">

                    <label for="price">Price</label>
                    <input name="Price" id="price" type="text" class="form-control" value="{{product.Price}}">

                    <label for="description">Description</label>
                    <input name="Description" id="description" type="text" value="{{product.Description}}" class="form-control mb-3">

                    <label>Image</label>
                    <img src="/images/product-images/{{product._id}}.png" style="height: 100px; width 100px;" class="mb-3" id="imgView" alt="">
                    <input name="Image" type="file" class="form-control" onchange="viewImage(event)">

                    <button class="btn btn-success mt-4" type="submit">Submit</button>
                </form>

            </div>

        </div>
    </div>
</section>

<script>
    function viewImage(event){
        document.getElementById("imgView").src=URL.createObjectURL(event.target.files[0])
    }
</script>