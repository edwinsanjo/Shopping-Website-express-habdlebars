<div class="container p-8 mx-auto mt-12 bg-white">
  <div class="w-full overflow-x-auto">
    <div class="my-2">
      <h3 class="text-xl font-bold tracking-wider">Shopping Cart </h3>
    </div>
    <table class="w-full shadow-inner">
      <thead>
        <tr class="bg-gray-100">
          <th class="px-6 py-3 font-bold whitespace-nowrap">Product</th>
          <th class="px-6 py-3 font-bold whitespace-nowrap">Qty</th>
          <th class="px-6 py-3 font-bold whitespace-nowrap">Price</th>
          <th class="px-6 py-3 font-bold whitespace-nowrap">Remove</th>
        </tr>
      </thead>
      <tbody>




        {{#each products}}
        <tr class="border-b-2 border-gray-200">
          <td class="p-4 px-6 text-center whitespace-nowrap">{{this.product.Name}}</td>
          <td class="p-4 px-6 text-center whitespace-nowrap">
            <div>
              <button class="px-2 py-0 shadow"
                onclick="ChangeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',-1,'{{this.quantity}}')"
                >-</button>
              <p class="text-center bg-gray-100"> <span id="{{this.product._id}}">{{this.quantity}}</span></p>
              <button class="px-2 py-0 shadow"
                onclick="ChangeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',1,'{{this.quantity}}')"
                >+</button>
            </div>
          </td>
          <td class="p-4 px-6 text-center whitespace-nowrap">{{this.product.Price}}</td>
          <td class="p-4 px-6 text-center whitespace-nowrap">
            <button
              onclick="remove('{{this._id}}','{{this.product._id}}')"
              class="px-2 py-0 text-red-100 bg-red-600 rounded">
              x
            </button>
          </td>
        </tr>
        {{/each}}








        <tr>
          <td class="p-4 px-6 text-center whitespace-nowrap"></td>
          <td class="p-4 px-6 text-center whitespace-nowrap">
          </td>
          <td class="p-4 px-6 font-extrabold text-center whitespace-nowrap">
            Total - Rs.{{total}}
          </td>
          <td class="p-4 px-6 text-center whitespace-nowrap">

          </td>
        </tr>
      </tbody>
    </table>
    <div class="flex justify-end mt-4 space-x-2">
      <a href="/place-order" class="
              px-6
              py-3
              text-sm text-white
              bg-green-500
              hover:bg-green-600
            ">
        Checkout
      </a>
    </div>
  </div>
</div>