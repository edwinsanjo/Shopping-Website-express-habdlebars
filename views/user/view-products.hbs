<section>
    <div class="container mt-5">
        <div class="row">

            {{#each products}}
            <div class="col-md-3 mb-4">
                <div class="card" style="width: 15rem; height: 23rem;">
                    <img src="/images/product-images/{{this._id}}.png" class="card-img-top" style="height: 14rem;" alt="">
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text">{{this.Description}}</p>
                        <button onclick="addToCart("{{this._id}}")" class="btn btn-primary">Add to Cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
            
        </div>
    </div>
</section>

